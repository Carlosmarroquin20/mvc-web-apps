@model mvc_web_apps.Models.User

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Message"]</h1>
    <form method="post">
        <div>
            <label for="Name">Name:</label>
            <input type="text" id="Name" name="Name" required />
        </div>
        <div>
            <label for="Email">Email:</label>
            <input type="email" id="Email" name="Email" required />
        </div>
        <div>
            <label for="Age">Age:</label>
            <input type="number" id="Age" name="Age" required />
        </div>
        <button type="submit">Submit</button>
    </form>

    @if (ViewData["UserEmail"] != null)
    {
        <div>
            <h2>Your Submitted Information:</h2>
            <p>Name: @ViewData["Message"]</p>
            <p>Email: @ViewData["UserEmail"]</p>
            <p>Age: @ViewData["UserAge"]</p>
        </div>
    }
</div>
